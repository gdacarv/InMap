<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <fragment
        android:id="@+id/google_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        class="com.google.android.gms.maps.SupportMapFragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical" >

        <com.inmap.views.AnimateFrameLayout
            android:id="@+id/layout_levels"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:visibility="invisible" >

            <fragment
                android:id="@+id/fragment_levelpicker"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                class="com.inmap.fragments.LevelPickerFragment" />
        </com.inmap.views.AnimateFrameLayout>

        <fragment
            android:id="@+id/fragment_infrabar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            class="com.inmap.fragments.InfrastructureBarFragment" />
    </LinearLayout>

</RelativeLayout>