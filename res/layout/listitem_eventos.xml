<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/txt_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left" >

        <TextView
            android:id="@+id/txt_event_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
        	android:textColor="@color/blue_light"
        	android:layout_marginRight="10dp"
        	android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/txt_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
        	android:textColor="@color/blue_light"
        	android:drawableLeft="@drawable/ico_calendar_loja"
        	android:drawablePadding="7dp"
        	android:layout_marginRight="10dp"
        	android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/txt_event_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:textColor="@color/blue_light"
        	android:drawablePadding="5dp"
        	android:drawableLeft="@drawable/ico_hour_loja"
        	android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

</LinearLayout>